
<section id="services">
  <div class="container">
    <div class="row">
      <h3>Sign up</h3>  
      <div class="divider-line"></div>   
      <div class="col-lg-12">
        <div class="panel-body">
          <div class="row">   
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="field">
                <%= f.label :name %><br />
                <%= f.text_field :name, { autofocus: true , class: 'form-control input-md'} %>
              </div>
              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, { autofocus: true , class: 'form-control input-md'}%>
              </div>

              <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, { autofocus: true , class: 'form-control input-md'} %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, { autofocus: true , class: 'form-control input-md'} %>
              </div>

              <div class="actions">
                <%= f.submit "Sign up", {class: 'btn btn-primary'} %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

