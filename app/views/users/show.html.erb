<section id="services">
  <div class="container">
    <div class="row">
      <h3>User Expense Detail:</h3>  
      <div class="divider-line"></div>   
      <div class="col-lg-12">
        <div class="panel-body">
          <div class="row">      
          	<span></span>          
            <div id="total_expense_payment">
              <table style="width:600px">
                <tr>
                  <td>
                    <label> Total Expense:</label>
                    <div>
                      <%= @total_expenses %>
                    </div>
                  </td>
                  <td>
                    <label> Total paid:</label>
                    <div> <% total_paid = @total_paid.present? ?  @total_paid.total : 0 %>
                      <%= total_paid %>
                    </div>
                  </td>
                  <td>
                    <label> Remaining balance to be paid: </label>
                    <div> <%= @total_expenses - total_paid  %> </div>
                  </td>
                </tr>
              </tr>
             </table>
            </div>
          </div>
        </div>
      </div>
      <div class="divider-line"></div>   
      <h3>Groups that needs to pay attention:</h3>  
      <div class="divider-line bottom-spacing"></div>   
      <div class="col-lg-12">
        <div class="panel-body">
          <div class="row">      
            <span></span>          
            <div id="total_expense_payment">
              <table style="width:600px">
                <% @groups.each do |group| %>
                  <tr>
                    <td>
                      <label>Group Name:</label>
                      <div>
                        <%= group.name %>
                      </div>
                    </td>
                    <td>
                      <label> Total paid:</label>
                      <div> 
                        <%= group.amount %>
                      </div>
                    </td>
                    <td>
                      <label> Remaining balance to be paid: </label>
                      <div> <%= group.amount/ group.group_members_count  %> </div>
                    </td>
                  </tr>
                <% end %>
              </tr>
             </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
